{
  "name": "@launchpad-ts/api",
  "version": "0.1.0",
  "scripts": {
    "start:dev": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "typecheck": "tsc --noEmit",
    "serve": "node build/server.js",
    "build": "npm run build-ts",
    "start": "npm run serve",
    "test:all": "jest -c jest.config.ts",
    "test:unit": "jest -c jest.unit.config.ts",
    "test:integration": "jest -c jest.integration.config.ts --runInBand",
    "test:coverage": "jest --collect-coverage",
    "migrations:create": "typeorm migration:create -n",
    "migrations:generate": "typeorm generate -n",
    "migrations:run": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run",
    "migrations:revert": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:revert",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": "16.x.x",
    "npm": "6.x.x"
  },
  "devDependencies": {
    "@launchpad-ts/shared-types": "0.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa": "2.13.8",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@sentry/node": "^7.67.0",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "koa-jwt": "^4.0.4",
    "koa-swagger-decorator": "^1.8.6",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "winston": "^3.10.0"
  }
}
