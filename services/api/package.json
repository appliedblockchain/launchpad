{
  "name": "@launchpad-ts/api",
  "version": "0.1.0",
  "scripts": {
    "start:dev": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "typecheck": "tsc --noEmit",
    "serve": "node build/server.js",
    "build": "npm run build-ts",
    "start": "npm run serve",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "migrations:create": "typeorm migration:create -n",
    "migrations:run": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run",
    "migrations:revert": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:revert",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": "16.x.x",
    "npm": "6.x.x"
  },
  "devDependencies": {
    "@launchpad-ts/shared-types": "0.1.0",
    "@types/jest": "^27.4.1",
    "@types/koa": "2.13.4",
    "@types/koa-bodyparser": "^4.3.6",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa__cors": "^3.1.1",
    "@types/koa__router": "^8.0.11",
    "@types/node": "^17.0.21",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "@sentry/node": "^6.18.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.3",
    "koa-swagger-decorator": "^1.8.5",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.45",
    "winston": "^3.6.0"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
