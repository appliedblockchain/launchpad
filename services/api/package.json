{
  "name": "@launchpad-ts/api",
  "version": "0.1.0",
  "scripts": {
    "start:dev": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "typecheck": "tsc --noEmit",
    "serve": "node build/server.js",
    "build": "npm run build-ts",
    "start": "npm run serve",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:unit": "jest -c jest.unit.config.ts --collect-coverage",
    "test:integration": "jest -c jest.integration.config.ts --runInBand --collect-coverage",
    "test:coverage": "jest --collect-coverage",
    "migrations:create": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:create",
    "migrations:generate": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:generate -d ormconfig.ts",
    "migrations:run": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run -d ormconfig.ts",
    "migrations:revert": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:revert",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": "18.x.x",
    "npm": "9.x.x"
  },
  "devDependencies": {
    "@launchpad-ts/shared-types": "0.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/koa": "2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-helmet": "^6.0.8",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.11.28",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "@sentry/node": "^7.107.0",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.1",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "koa-jwt": "^4.0.4",
    "koa-swagger-decorator": "^1.8.7",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "winston": "^3.12.0"
  }
}
