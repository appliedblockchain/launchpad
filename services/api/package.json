{
  "name": "@launchpad-ts/api",
  "version": "0.1.0",
  "scripts": {
    "start:dev": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "typecheck": "tsc --noEmit",
    "serve": "node build/server.js",
    "build": "npm run build-ts",
    "start": "npm run serve",
    "test:all": "jest -c jest.config.ts",
    "test:unit": "jest -c jest.unit.config.ts",
    "test:integration": "jest -c jest.integration.config.ts --runInBand",
    "test:coverage": "jest --collect-coverage",
    "migrations:create": "typeorm migration:create -n",
    "migrations:generate": "typeorm generate -n",
    "migrations:run": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run",
    "migrations:revert": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:revert",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": "16.x.x",
    "npm": "6.x.x"
  },
  "devDependencies": {
    "@launchpad-ts/shared-types": "0.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.1.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/koa": "2.13.4",
    "@types/koa-bodyparser": "4.3.7",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^18.8.1",
    "@types/supertest": "^2.0.12",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@koa/cors": "^3.4.1",
    "@koa/router": "^12.0.0",
    "@sentry/node": "^7.14.1",
    "@sentry/tracing": "^7.14.1",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.3",
    "koa-swagger-decorator": "^1.8.6",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.10",
    "winston": "^3.8.2"
  }
}
